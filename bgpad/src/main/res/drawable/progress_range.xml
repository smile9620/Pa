<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景  gradient是渐变,corners定义的是圆角 -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="90.0"
                android:centerColor="#ffffff"
                android:centerY="0.45"
                android:endColor="@color/report_green_light"
                android:startColor="@color/report_green_light" />
        </shape>
    </item>
    <!-- 进度条 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="90.0"
                    android:centerColor="@color/report_green_light"
                    android:centerY="0.45"
                    android:endColor="@color/report_green_dark"
                    android:startColor="@color/report_green_dark" />
            </shape>
        </clip>
    </item>
</layer-list>