<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_marginTopPercent="3%"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input"
                android:layout_width="@dimen/selectuser_edit_width"
                android:layout_height="@dimen/selectuser_edit_height"
                android:background="@drawable/user_bg1"
                android:hint="@string/search_name"
                android:maxLength="21"
                android:padding="@dimen/information_table_padd"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/general_text" />

            <FrameLayout
                android:layout_width="@dimen/selectuser_edit_height"
                android:layout_height="@dimen/selectuser_edit_height"
                android:background="@color/more_bt">

                <ImageButton
                    android:id="@+id/more"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/more_bt" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="@dimen/selectuser_edit_height"
                android:layout_height="@dimen/selectuser_edit_height"
                android:background="@color/table_row">

                <ImageButton
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/search_bt" />
            </FrameLayout>
        </LinearLayout>

        <Button
            android:id="@+id/add"
            android:layout_width="@dimen/selectuser_addbt_width"
            android:layout_height="@dimen/selectuser_edit_height"
            android:layout_marginLeft="@dimen/selectuser_addbt_marginleft"
            android:background="@drawable/test_bg"
            android:text="新建用户"
            android:textColor="@color/share_view"
            android:textSize="@dimen/general_text" />
    </LinearLayout>
</android.support.percent.PercentRelativeLayout>
